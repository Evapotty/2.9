<Window x:Class="_209.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_209"
        mc:Ignorable="d"
           Title="Школа языков Леарн" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal"/>
        <StackPanel Orientation="Horizontal">
            <Label MinHeight="25" FontFamily="Comic Sans MS" FontSize="14" Foreground="">
                <Image Height="162" Source="school_logo.png" Stretch="Fill" Width="162"/>
            </Label>
            <Label Content="Пароль" MinHeight="25" FontFamily="Comic Sans MS" FontSize="14" Foreground="#FF04A0FF"/>
            <Label HorizontalAlignment="Center" Content="Логин" FontFamily="Comic Sans MS" FontSize="14" Foreground="#FF04A0FF"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Height="60" VerticalAlignment="Center" Margin="0" Background="#FF04A0FF">
            <TextBox Margin="3" Height="22"/>
            <TextBox Margin="3" Height="22" Width="190"/>
        </StackPanel>
    </Grid>
</Window>
